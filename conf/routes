# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Tasks list
GET     /products                   controllers.Tasks.list

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /getTasks                   controllers.Tasks.getTasks

GET     /getAddedTasks              controllers.Tasks.getAddedTasks             #a)

GET     /getDoneTasks               controllers.Tasks.getDoneTasks              #b)

GET     /getIndefinite              controllers.Tasks.getIndefiniteTimeTasks    #c)

GET     /getDeadline                controllers.Tasks.getDeadlineTasks          #d)

POST    /addDeadlineTask            controllers.Tasks.addDeadlineTask           #e)

POST    /addIndefiniteTask          controllers.Tasks.addIndefiniteTask         #e)

POST    /addPeriodicTask            controllers.Tasks.addPeriodicTask           #e)

POST    /setDone                    controllers.Tasks.setDone                   #f)

POST    /setCancelled               controllers.Tasks.setCancelled              #f)

POST    /setDeadline                controllers.Tasks.setDeadline               #g)

POST    /changeTime                 controllers.Tasks.changeTime                #h)